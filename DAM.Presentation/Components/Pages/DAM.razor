@page "/dam"
@attribute [StreamRendering]
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Digital Asset Management</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 3rem 1rem;
        border-radius: 8px;
        margin-bottom: 3rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        background: linear-gradient(45deg, #2c3e50, #4ca1af);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto 1.5rem;
        color: #555;
    }

    .nav-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 0 auto;
        max-width: 1200px;
    }

    .nav-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid #eaeaea;
        height: 100%;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
    }

    .nav-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
    }

    .nav-card:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #4ca1af, #2c3e50);
        transition: height 0.3s ease;
    }

    .nav-card:hover:before {
        height: 8px;
    }

    .nav-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .nav-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }

    .nav-description {
        color: #666;
        line-height: 1.5;
    }

    .stats-section {
        margin-top: 4rem;
        padding: 2rem;
        background-color: #f5f5f5;
        border-radius: 8px;
        text-align: center;
    }

    .stats-title {
        margin-bottom: 2rem;
        font-size: 1.8rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .stat-item {
        padding: 1.5rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        display: block;
        margin-bottom: 0.5rem;
        background: linear-gradient(45deg, #2c3e50, #4ca1af);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        color: #666;
    }

    .team-section {
        margin-top: 2rem;
        padding: 1.5rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .team-section h3 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        background: linear-gradient(45deg, #2c3e50, #4ca1af);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .team-members {
        font-size: 1.2rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .program {
        color: #666;
        font-style: italic;
    }

    footer {
        margin-top: 4rem;
        padding: 1rem 0;
        text-align: center;
        color: #666;
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid">
    <section class="hero-section">
        <h1 class="hero-title">Digital Asset Management</h1>
        <p class="hero-subtitle">Organize, manage, and distribute your digital assets efficiently with our comprehensive DAM system.</p>
    </section>

    <div class="nav-grid">
        <div class="nav-card" @onclick="NavigateToProducts">
            <div class="nav-icon">üì¶</div>
            <h2 class="nav-title">Products</h2>
            <p class="nav-description">Browse and manage your product catalog with associated digital assets.</p>
        </div>

        <div class="nav-card" @onclick="NavigateToAssets">
            <div class="nav-icon">üñºÔ∏è</div>
            <h2 class="nav-title">Assets</h2>
            <p class="nav-description">Upload, organize, and search your digital assets with powerful tagging features.</p>
        </div>

        <div class="nav-card" @onclick="NavigateToTags">
            <div class="nav-icon">üè∑Ô∏è</div>
            <h2 class="nav-title">Tags</h2>
            <p class="nav-description">Create and manage tags to categorize and find assets efficiently.</p>
        </div>

        <div class="nav-card" @onclick="NavigateToHelp">
            <div class="nav-icon">üí°</div>
            <h2 class="nav-title">Help</h2>
            <p class="nav-description">Learn how to use the system with our comprehensive documentation.</p>
        </div>
    </div>

    <section class="stats-section">
        <h2 class="stats-title">Project Information</h2>
        <div class="stats-grid">
            <div class="stat-item">
                <span class="stat-number">2nd</span>
                <span class="stat-label">Semester Project</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">T3-G2</span>
                <span class="stat-label">Project Group</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">SDU</span>
                <span class="stat-label">University of Southern Denmark</span>
            </div>
        </div>

        <div class="team-section mt-4">
            <h3>Developed By</h3>
            <p class="team-members">Emil, Magnus, Mathias P, Mathias S & Nicolai</p>
            <p class="program">BSc in Software Engineering</p>
        </div>
    </section>

    <footer>
        <p>Digital Asset Management System &copy; @DateTime.Now.Year</p>
    </footer>
</div>

@code
{
    public void NavigateToProducts()
    {
        NavigationManager.NavigateTo($"/dam/products");
    }

    public void NavigateToAssets()
    {
        NavigationManager.NavigateTo($"/dam/assets");
    }

    public void NavigateToHelp()
    {
        NavigationManager.NavigateTo($"/dam/help");
    }

    public void NavigateToTags()
    {
        NavigationManager.NavigateTo("/dam/tags");
    }
}