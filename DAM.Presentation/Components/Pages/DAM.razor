@page "/dam"
@attribute [StreamRendering]
@rendermode  InteractiveServer
@inject NavigationManager NavigationManager

<style>
    body {
        text-align: center;
    }
    
    h1 {
        margin-bottom:  10px;
    }

    .nav-button {
        padding: 10px 20px;
        margin: 5px;
        border: 2px solid #333;
        background-color: white;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .nav-button:hover {
        background-color: #333;
        color: white;
    }
</style>


<PageTitle>Digital Assets System</PageTitle>

<h1>Digital Assets System</h1>

<button class="nav-button" @onclick="NavigateToProducts" >
    📦 Products
</button>

<button class="nav-button" @onclick="NavigateToAssets" >
    🖼️ Assets
</button>

<button class="nav-button" @onclick="NavigateToTags">
    🏷️️ Tags
</button>

<button class="nav-button" @onclick="NavigateToHelp" >
    💡 Help
</button>

@code
{
    public void NavigateToProducts()
    {
        NavigationManager.NavigateTo($"/dam/products");
    }
    
    public void NavigateToAssets()
    {
        NavigationManager.NavigateTo($"/dam/assets");
    }
    
    public void NavigateToHelp()
    {
        NavigationManager.NavigateTo($"/dam/help");
    }
    
    public void NavigateToTags ()
    {
        NavigationManager.NavigateTo("/dam/tags");
    }
}

