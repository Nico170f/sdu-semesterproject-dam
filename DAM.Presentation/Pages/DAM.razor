@page "/dam"
@attribute [StreamRendering]
@rendermode  InteractiveServer
@inject NavigationManager NavigationManager

<style>
    body {
        text-align: center;
    }
    
    h1 {
        margin-bottom:  10px;
    }

    .nav-button {
        padding: 10px 20px;
        margin: 5px;
        border: 2px solid #333;
        background-color: white;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .nav-button:hover {
        background-color: #333;
        color: white;
    }


    .help-toggle {
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 10px 15px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        z-index: 1000;
    }

    .help-slide-in {
        position: fixed;
        top: 0;
        right: -350px; /* skjult */
        width: 300px;
        height: 100%;
        background-color: #f8f9fa;
        box-shadow: -2px 0 5px rgba(0,0,0,0.2);
        padding: 20px;
        transition: right 0.3s ease-in-out;
        z-index: 999;
        overflow-y: auto;
    }

    .help-slide-in.open {
        right: 0; /* vises */
    }

    .close-help {
        margin-top: 20px;
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

</style>


<PageTitle>Digital Assets System</PageTitle>

<h1>Digital Assets System</h1>

<button class="nav-button" @onclick="NavigateToProducts" >
    üì¶ Products
</button>

<button class="nav-button" @onclick="NavigateToAssets" >
    üñºÔ∏è Assets
</button>

<button class="nav-button" @onclick="NavigateToHelp" >
    üí° Help
</button>

<button class="help-toggle" @onclick="ToggleHelp">
    ‚ùì Help
</button>

<div class="help-slide-in @(showHelp ? "open" : "")">
    <h3>Do you need help?</h3>
    <ul>
        <li>üì¶ <strong>Products:</strong> Look up and search for products.</li>
        <li>üíº <strong>Assets:</strong> Upload and manage digital assets.</li>
    </ul>
</div>

@code
{
    public void NavigateToProducts()
    {
        NavigationManager.NavigateTo($"/dam/products");
    }
    
    public void NavigateToAssets()
    {
        NavigationManager.NavigateTo($"/dam/assets");
    }
    
    public void NavigateToHelp()
    {
        NavigationManager.NavigateTo($"/dam/help");
    }
    
    private bool showHelp = false;

    private void ToggleHelp()
    {
        showHelp = !showHelp;
    }
}
